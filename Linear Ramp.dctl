DEFINE_UI_PARAMS(Linear_Ramp, Linear Ramp, DCTLUI_CHECK_BOX, 0)

__DEVICE__ float3 transform(int p_Width, int p_Height, int p_X, int p_Y, float p_R, float p_G, float p_B)
{
    if (Linear_Ramp == 1)
    {
        float linear_value = (float)p_X / (p_Width - 1.0f);
        return make_float3(linear_value, linear_value, linear_value);
    }
    return make_float3(p_R, p_G, p_B);
}